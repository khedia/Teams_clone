<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_toStartOf="@+id/test_arrow"
        android:id="@+id/message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="7dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-15dp"
        android:maxWidth="200dp"
        android:background="@drawable/background_right"
        tools:ignore="UselessParent">
        <TextView
            android:layout_marginEnd="10dp"
            android:id="@+id/show_message"
            android:text="@string/demo_text"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:maxWidth="190dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/timeOfMessage"
            android:textSize="13sp"
            android:layout_toEndOf="@id/show_message"
            android:layout_alignBottom="@+id/show_message"
            android:text="@string/_1_30_p_m"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/is_Read_iv"
            android:layout_toEndOf="@+id/timeOfMessage"
            android:layout_alignBottom="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_seen"
        android:layout_below="@id/message_send"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_3sdp"
        android:text="@string/delivered"/>

    <ImageView
        android:id="@+id/test_arrow"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:background="@null"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="-8dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name" />
</RelativeLayout>